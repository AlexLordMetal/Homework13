@model IEnumerable<BattleASP.Models.Player>

@{
    ViewBag.Title = "Index";
}

<h2>List of Players</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Level)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Hp)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Mp)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Str)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Int)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Exp)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Money)
		</th>
		<th></th>
	</tr>

@foreach (var item in Model) {
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.Name)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Level)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Hp)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Mp)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Str)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Int)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Exp)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Money)
		</td>
        <td>
            @Html.ActionLink("Start Game", "StartGame", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
	</tr>
}

</table>
