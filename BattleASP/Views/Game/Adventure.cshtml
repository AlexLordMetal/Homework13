@model BattleASP.Models.GameAdventureModel

@{
    ViewBag.Title = "Adventure";
}

<h2>Adventure</h2>
<h3>Сhoose a monster to fight</h3>

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Monsters.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Monsters.FirstOrDefault().Level)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Monsters.FirstOrDefault().Hp)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Monsters.FirstOrDefault().Mp)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Monsters.FirstOrDefault().Str)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Monsters.FirstOrDefault().Int)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Monsters)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Str)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Int)
            </td>
            <td>
                @Html.ActionLink("Start Battle", "BattleResult", new { id = item.Id })
            </td>
        </tr>
    }

</table>